# FILE MANAGED BY PUPPET
# Default settings for Squash. This file is sourced by /bin/bash.

# Extra arguments passed to JVM
JAVA_ARGS="<%= @java_args %>"

# Port for HTTP connector
HTTP_PORT=<%= @port %>

# DataBase parameters
<% if @db = "mysql" -%>
DB_URL="jdbc:mysql://localhost:3306/squashtm"
DB_TYPE="mysql"
<% elsif @db = "postgresql" -%>
DB_URL="jdbc:postgresql://localhost:5432/squashtm"
DB_TYPE="postgresql"
<% elsif @db = "DB2" -%>
DB_URL="jdbc:h2:///var/lib/squash-tm/data/squash-tm"
DB_TYPE="h2"
<% end -%>

DB_USERNAME="<%= @db_username %>"
DB_PASSWORD="<%= @db_password %>"

